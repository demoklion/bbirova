{
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [{
            "source": "**",
            "destination": "/public/index.html"
        }]
    },
    "storage": {
        "rules": "storage.rules"
    }
}